# 本番環境用設定ファイル
# Vercelデプロイ時はVercelダッシュボードから設定してください

# NextAuth設定
NEXTAUTH_URL=https://your-domain.vercel.app
NEXTAUTH_SECRET=your-production-secret-key-generate-with-openssl

# 本番データベース (PostgreSQL推奨)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# または Vercel Postgres を使用する場合
# POSTGRES_URL="postgres://..."
# POSTGRES_PRISMA_URL="postgres://..."
# POSTGRES_URL_NON_POOLING="postgres://..."
# POSTGRES_USER=""
# POSTGRES_HOST=""
# POSTGRES_PASSWORD=""
# POSTGRES_DATABASE=""

# メール送信 (Resend)
RESEND_API_KEY=re_your_actual_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Sentry エラー監視
NEXT_PUBLIC_SENTRY_DSN=https://your-actual-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=dandori-scheduler
SENTRY_AUTH_TOKEN=your-auth-token

# Stripe 決済 (オプション)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# AWS S3 ファイルアップロード (オプション)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=ap-northeast-1
AWS_S3_BUCKET=dandori-scheduler-uploads